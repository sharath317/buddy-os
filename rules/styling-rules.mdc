## Examples

### Complete Component Example

```tsx
import styled from 'styled-components';

// Button.styled.ts
import styled, { css } from 'styled-components';

import { borderRadiusStyles } from '@sixt-web/core-oxide/src/utils/styles/borderRadius.styles';
import { color } from '@sixt-web/core-oxide/src/utils/colors';
import { spacing } from '@sixt-web/core-oxide/src/utils/spacing';
import { rem } from '@sixt-web/core-oxide/src/utils/units';

interface IButtonProps {
  isFullWidth?: boolean;
  variant?: 'primary' | 'secondary' | 'tertiary';
}

export const Button = styled.button<IButtonProps>`
  ${borderRadiusStyles('s')}
  display: flex;
  align-items: center;
  justify-content: center;
  padding: ${spacing('xs')} ${spacing('m')};
  font-size: ${rem(16)};
  transition: background-color 0.2s, color 0.2s, border-color 0.2s;

  ${({ isFullWidth }) =>
    isFullWidth &&
    css`
      width: 100%;
    `}

  ${({ variant = 'primary' }) => {
    switch (variant) {
      case 'primary':
        return css`
          background-color: ${color('primary')};
          color: ${color('onPrimary')};
          border: none;

          &:hover {
            background-color: ${color('hoverState')};
          }
        `;
      case 'secondary':
        return css`
          background-color: transparent;
          color: ${color('primary')};
          border: 1px solid ${color('primary')};

          &:hover {
            background-color: ${color('canvas2')};
          }
        `;
      case 'tertiary':
        return css`
          background-color: transparent;
          color: ${color('primary')};
          border: none;

          &:hover {
            color: ${color('hoverState')};
          }
        `;
    }
  }}

  &:disabled {
    background-color: ${color('disabledState')};
    color: ${color('secondary')};
    border-color: transparent;
    cursor: not-allowed;
  }
`;

export const ButtonIcon = styled.span`
  margin-right: ${spacing('3xs')};
`;
```
